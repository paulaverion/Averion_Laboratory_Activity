#include <iostream>

using namespace std;

struct node
{
    int data;
    node*next;
    
};

class linked_list
{
    private:
        node *head, *tail;

    public:
        linked_list()
            {
                head = NULL;    
                tail = NULL;
            }
};

void addNodeEnd(int value)
{
    node*temp = new node;
    temp->data = value;
    temp->next = NULL;
    if(head == NULL)
    {
        head = temp;
        tail = temp;
    }
    else
    {
        tail->next = temp;
        tail = tail->next;
    }
}

void addNodeStart(int value)
{
    node*temp = new node;
    temp->data = value;
    temp->next = head;
    head = temp;
}

void addNodePosition(int position,int value)
{
    node*pre = new node;
    node*cur = new node;
    node*temp = new node;
    cur = head;
    for(int i = 1;  i < position; i++)
    {
        pre = cur;
        cur = cur->next;
    }
    temp->data = value;
    pre->next = temp;
    temp->next = cur;
}

void deleteNodePosition(int position)
{
    node*cur = new node;
    node*pre = new node;
    cur = head;
    for(int i = 1; i < position; i++)
    {
        pre = cur;
        cur = cur->next;
    }
    pre->next = cur->next;
    delete cur;
}

void display()
{
    node*cur = new node;
    cur = head;
    for(int i = 1; cur != NULL; i++)
    {
        cout << "[" << i << "]: " << cur->data;
        cur = cur->next;
    }
}

int main()
{
    linked_list(test);
    while(true)
    {
        int choice;

        cout << "Menu:\n";
        cout << "1. Insert at the beginning\n";
        cout << "2. Insert at the end\n";
        cout << "3. Insert after a position\n";
        cout << "4. Delete a node at a position\n";
        cout << "5. Print the list\n";
        cout << "6. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        
        if (choice == 1)
        {
            int value;
            cout << "Enter value to insert at the beginning: ";
            cin >> value;
            addNodeStart(value);
            continue;
        }
        if (choice == 2)
        {
            int value;
            cout << "Enter value to insert at the end: ";
            cin >> value;
            addNodeEnd(value);
            continue;
        }
        if (choice == 3)
        {
            int value, position;
            cout << "Enter value to insert: ";
            cin >> value;
            cout << "Enter position to insert after (1-based index), or 'x' to cancel: ";
            cin >> position;
            if(position == 'x')
            {
                continue;
            }
            else
            {
                addNodePosition(position, value);
                continue;
            }
        }
        if (choice == 4)
        {
            int position;
            cout << "Enter position to delete (1-based index), or 'x' to cancel: ";
            cin >> position;
            if(position == 'x')
            {
                continue;
            }
            else
            {
                deleteNodePosition(position);
                continue;
            }
        }
        if (choice == 5)
        {
            cout << "Linked list:\n";
            display();
            continue;
        }
        else
        {
            break;
        }
    }

    return 0;
}
